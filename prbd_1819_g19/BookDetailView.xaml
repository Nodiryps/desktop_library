<f:UserControlBase 
      x:Class="prbd_1819_g19.BookDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prbd_1819_g19"
      xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="143*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding MessagesView}" Margin="434,10,10,84" 
                      SelectedItem="{Binding SelectedMessage}" AutoGenerateColumns="False" IsReadOnly="True" IsEnabled="{Binding ReadMode}" SelectionMode="Single" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=DateTime, StringFormat=\{0:dd/MM/yyyy HH:mm:ss\}}" SortDirection="Descending"/>
                <DataGridTextColumn Header="Acquisition Date" Binding="{Binding Path=Author.Pseudo}" />
                <DataGridTextColumn Header="Rented By" Binding="{Binding Path=Recipient.Pseudo}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Cancel" Margin="0,0,712,19" VerticalAlignment="Bottom" Command="{Binding NewCommand}" HorizontalAlignment="Right" Width="75" Height="20" Grid.Row="1"/>
        <Button Content="Save" Margin="0,0,632,19" VerticalAlignment="Bottom" Command="{Binding DeleteCommand}" HorizontalAlignment="Right" Width="75" Height="20" Grid.Row="1"/>
        <Button Content="Delete" Margin="0,0,552,19" VerticalAlignment="Bottom" Command="{Binding RefreshCommand}" HorizontalAlignment="Right" Width="75" Height="20" Grid.Row="1"/>
        <Grid Height="146" Margin="16,16,0,0" VerticalAlignment="Top" IsEnabled="{Binding SelectedMessage, Converter={f:NullToBoolValueConverter}}" HorizontalAlignment="Left" Width="774">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="ISBN :" VerticalAlignment="Center" Grid.Row="0" />
            <TextBox Text="{Binding DateTime}" IsReadOnly="True" Grid.Row="0" Grid.Column="1" Margin="5" />
            <Label Content="Title :" VerticalAlignment="Center" Grid.Row="1" />
            <TextBox Text="{Binding DateTime}" IsReadOnly="True" Grid.Row="1" Grid.Column="1" Margin="5,1.667,5,7.667" />

            <Label Content="Author :" VerticalAlignment="Center" Grid.Row="2" />
            <TextBox Text="{Binding DateTime}" IsReadOnly="True" Grid.Row="2" Grid.Column="2" Margin="5,1.667,5,7.667" />

            <Label Content="Editor :" VerticalAlignment="Center" Grid.Row="3" />
            <f:ValidatedField VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Margin="5" >
                <TextBox Text="{Binding Body, UpdateSourceTrigger=PropertyChanged}" />
            </f:ValidatedField>
            <Label Content="Categories :" VerticalAlignment="Center" Grid.Row="4" />
            <Label Content="Essai" VerticalAlignment="Center" Grid.Row="4" Margin="31,1.333,624,2" Grid.Column="1" />
            <CheckBox IsChecked="{Binding IsPrivate}" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" Margin="10,4.333,663,10" RenderTransformOrigin="0.3,-1.696"/>
            <Label Content="Essai" VerticalAlignment="Center" Grid.Row="4" Margin="120,1.333,535,2" Grid.Column="1" />
            <CheckBox IsChecked="{Binding IsPrivate}" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Margin="84,5.333,589,10" RenderTransformOrigin="0.3,-1.696"/>




        </Grid>
        <Button Content="Load" Margin="0,0,467,239" VerticalAlignment="Bottom" Command="{Binding SaveOneCommand}" HorizontalAlignment="Right" Width="75" Height="26" RenderTransformOrigin="0.5,0.5" Grid.Row="1"/>
        <Button Content="Clear" Margin="0,0,467,207" VerticalAlignment="Bottom" Command="{Binding CancelCommand}" HorizontalAlignment="Right" Width="75" Height="21" Grid.Row="1"/>

        <Label Content="Informatique" VerticalAlignment="Center" Grid.Row="1" Margin="67,48,660,212" />
        <CheckBox IsChecked="{Binding IsPrivate}" Grid.Row="1" VerticalAlignment="Center" Margin="46,52,733,220" RenderTransformOrigin="0.3,-1.696"/>
        <Label Content="Littérature" VerticalAlignment="Center" Grid.Row="1" Margin="67,21,667,239" />
        <CheckBox IsChecked="{Binding IsPrivate}" Grid.Row="1" VerticalAlignment="Center" Margin="46,25,733,247" RenderTransformOrigin="0.3,-1.696"/>
        <Label Content="Roman" VerticalAlignment="Center" Grid.Row="1" Margin="67,75,682,185" />
        <CheckBox IsChecked="{Binding IsPrivate}" Grid.Row="1" VerticalAlignment="Center" Margin="46,79,733,193" RenderTransformOrigin="0.3,-1.696"/>
        <Label Content="Science Fcition" VerticalAlignment="Center" Grid.Row="1" Margin="67,109,645,151" RenderTransformOrigin="0.5,0.5" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.193"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <CheckBox IsChecked="{Binding IsPrivate}" Grid.Row="1" VerticalAlignment="Center" Margin="46,113,733,159" RenderTransformOrigin="0.3,-1.696"/>
        <Label Content="Date: " HorizontalAlignment="Left" Margin="404,229,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <ScrollBar HorizontalAlignment="Left" Margin="586,230,0,0" Grid.Row="1" VerticalAlignment="Top" Width="18"/>
        <ScrollBar HorizontalAlignment="Left" Margin="649,230,0,0" Grid.Row="1" VerticalAlignment="Top" Width="18" RenderTransformOrigin="3.665,0.444"/>
    </Grid>
</f:UserControlBase>
